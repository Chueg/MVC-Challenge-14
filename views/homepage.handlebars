<!-- Loop over each object in the posts array -->
<div class="bunf">
{{#each posts as |post| }}
<section class="row mb-4 post">
  <div>
    <div class="smokem">
  <div>
  <h2>{{name}}   <p>Posted by {{user.name}} on {{format_date date_created}}</p> </h2>
  </div>
  <p>
    {{description}}
  </p>
  <a href="/post/{{id}}"class ="ranch">Visit this post!</a>
</section>

{{/each}}
</div>

